<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_register"
    android:clickable="true"
    tools:context="com.madushanka.imotoristofficer.DashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:alpha="0.9"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="1">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/dlnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:hint="Driving License Number"
            android:inputType="text"
            android:maxLength="8"
            app:met_baseColor="#f9f8f1"
            app:met_errorColor="#f44336"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Driving License Number  "
            app:met_maxCharacters="8"
            app:met_minCharacters="0"
            app:met_primaryColor="#008e79"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/hint" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:hint="Vehicle Number"
            android:inputType="textNoSuggestions"
            android:maxLength="8"
            app:met_baseColor="#f9f8f1"
            app:met_errorColor="#f44336"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Vehicle Number  "
            app:met_maxCharacters="8"
            app:met_minCharacters="0"
            app:met_primaryColor="#008e79"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/hint" />


        <info.hoang8f.widget.FButton
            android:id="@+id/add_offence_validate"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Validate"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowEnabled="false" />

        <net.bohush.geometricprogressview.GeometricProgressView
            android:id="@+id/progressView"
            android:layout_width="51dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="60dp"
            app:gp_figure_padding="2dp"
            android:visibility="gone"
            app:gp_number_of_angles="15" />

        <TextView
            android:id="@+id/motorist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.30"
            android:text=""
            android:textColor="@android:color/white" />

        <info.hoang8f.widget.FButton
            android:id="@+id/add_offence_next"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Next"
            android:visibility="gone"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowEnabled="false" />

    </LinearLayout>


</FrameLayout>
