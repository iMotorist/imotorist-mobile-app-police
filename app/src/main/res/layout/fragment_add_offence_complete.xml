<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_register"
    android:clickable="true"
    tools:context="com.madushanka.imotoristofficer.AddOffenceFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/offence_summary_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.16"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Ticket Summary"
                android:textStyle="bold"
                android:textColor="@color/bg" />

            <TextView
                android:id="@+id/offence_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.30"
                android:fontFamily="sans-serif"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/white" />

            <info.hoang8f.widget.FButton
                android:id="@+id/view_offence_list"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Offence List"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_asbestos"
                fbutton:shadowEnabled="false" />

            <info.hoang8f.widget.FButton
                android:id="@+id/add_remark"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Add Remark"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_asbestos"
                fbutton:shadowEnabled="false" />

            <info.hoang8f.widget.FButton
                android:id="@+id/add_offence_confirm"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Confirm Ticket"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="false" />


            <net.bohush.geometricprogressview.GeometricProgressView
                android:id="@+id/progressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:gp_figure_padding="2dp"
                app:gp_number_of_angles="15" />

        </LinearLayout>




</FrameLayout>
